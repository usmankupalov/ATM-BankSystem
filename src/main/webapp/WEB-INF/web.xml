<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

              <servlet>
                 <servlet-name>CreateCardServlet</servlet-name>
                 <servlet-class>com.example.atmbanksystem.servlet.atm.CreateCardServlet</servlet-class>
              </servlet>

              <servlet-mapping>
                 <servlet-name>CreateCardServlet</servlet-name>
                 <url-pattern>/v1.0/create/card</url-pattern>
              </servlet-mapping>

              <servlet>
               <servlet-name>UserCardServlet</servlet-name>
               <servlet-class>com.example.atmbanksystem.servlet.atm.UserCardServlet</servlet-class>
              </servlet>

              <servlet-mapping>
               <servlet-name>UserCardServlet</servlet-name>
               <url-pattern>/v1.0/atm/card</url-pattern>
              </servlet-mapping>

              <servlet>
                <servlet-name>UserCardUpdateServlet</servlet-name>
                <servlet-class>com.example.atmbanksystem.servlet.atm.UserCardUpdateServlet</servlet-class>
              </servlet>

              <servlet-mapping>
                <servlet-name>UserCardUpdateServlet</servlet-name>
                <url-pattern>/v1.0/atm/card/update/password</url-pattern>
              </servlet-mapping>

              <servlet>
                <servlet-name>UserCardTransactionServlet</servlet-name>
                <servlet-class>com.example.atmbanksystem.servlet.atm.UserCardTransactionServlet</servlet-class>
              </servlet>

              <servlet-mapping>
                <servlet-name>UserCardTransactionServlet</servlet-name>
                <url-pattern>/v1.0/atm/transaction</url-pattern>
              </servlet-mapping>

              <servlet>
               <servlet-name>BankServlet</servlet-name>
               <servlet-class>com.example.atmbanksystem.servlet.BankServlet</servlet-class>
              </servlet>

              <servlet-mapping>
               <servlet-name>BankServlet</servlet-name>
               <url-pattern>/v1.0/bank</url-pattern>
              </servlet-mapping>

              <servlet>
               <servlet-name>CardServlet</servlet-name>
               <servlet-class>com.example.atmbanksystem.servlet.CardServlet</servlet-class>
              </servlet>

              <servlet-mapping>
               <servlet-name>CardServlet</servlet-name>
               <url-pattern>/v1.0/card</url-pattern>
              </servlet-mapping>
</web-app>